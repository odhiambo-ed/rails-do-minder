<div class="min-h-screen bg-gray-100">
  <!-- Navbar -->
  <nav class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex">
          <div class="flex-shrink-0 flex items-center">
            <h1 class="text-xl font-bold text-gray-900">Task Manager</h1>
          </div>
        </div>
        <div class="flex items-center">
          <span class="text-gray-700"><%= current_user.username %></span>
        </div>
      </div>
    </div>
  </nav>

  <div class="py-10">
    <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
      <div class="bg-white overflow-hidden shadow-sm sm:rounded-lg">
        <div class="p-6 bg-white border-b border-gray-200">
          <div class="flex">
            <!-- Categories sidebar -->
            <div class="w-1/4 pr-4">
              <h2 class="text-xl font-bold mb-4">All Tasks</h2>
              <ul>
                <li class="mb-2"><a href="#" class="text-indigo-600 hover:text-indigo-900">Favourites</a></li>
                <% current_user.categories.each do |category| %>
                  <li class="mb-2"><a href="#" class="text-gray-700 hover:text-gray-900"><%= category.name %></a></li>
                <% end %>
              </ul>
              <a href="#" class="text-gray-500 hover:text-gray-700">+ New category</a>
            </div>

            <!-- Tasks list -->
            <div class="w-3/4">
              <h2 class="text-2xl font-bold mb-4">All Tasks</h2>
              <div class="mb-4">
                <%= form_with(model: Task.new, local: true, class: "flex") do |f| %>
                  <%= f.text_field :title, placeholder: "Add a new task", class: "flex-grow p-2 border border-gray-300 rounded-l-md focus:ring-indigo-500 focus:border-indigo-500" %>
                  <%= f.collection_select :category_id, current_user.categories, :id, :name, {prompt: "Select category"}, class: "p-2 border border-gray-300" %>
                  <%= f.submit "Add", class: "bg-indigo-600 text-white px-4 py-2 rounded-r-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
                <% end %>
              </div>
              <ul>
                <% current_user.tasks.each do |task| %>
                  <li class="flex items-center mb-2">
                    <%= form_with(model: task, url: toggle_task_path(task), method: :patch, local: true, class: "flex items-center flex-grow") do |f| %>
                      <%= f.check_box :completed, onchange: 'this.form.submit()', class: "mr-2 h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
                      <span class="<%= task.completed ? 'line-through text-gray-500' : '' %>"><%= task.title %></span>
                      <span class="ml-2 px-2 py-1 text-sm font-semibold rounded-full" style="background-color: <%= task.category.color %>; color: white;"><%= task.category.name %></span>
                      <%= link_to 'Edit', edit_task_path(task), class: "ml-2 text-indigo-600 hover:text-indigo-900" %>
                      <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: "ml-2 text-red-600 hover:text-red-900" %>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>