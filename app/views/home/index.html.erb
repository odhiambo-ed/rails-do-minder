<div class="relative min-h-screen bg-gradient-to-br from-indigo-50 to-white overflow-hidden">
  <div class="absolute inset-0">
    <%= render partial: 'shared/background_animation' %>
  </div>
  <div class="relative max-w-7xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-4xl font-extrabold tracking-tight text-gray-900 sm:text-5xl md:text-6xl">
        <span class="block">Welcome to TaskFlow</span>
        <span class="block text-indigo-600">Manage Your Tasks Effortlessly</span>
      </h1>
      <p class="mt-3 max-w-md mx-auto text-base text-gray-600 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
        Streamline your productivity with our intuitive task management app. Sign up now to start organizing your life!
      </p>
      <div class="mt-5 max-w-md mx-auto sm:flex sm:justify-center md:mt-8">
        <%= link_to "Sign Up", new_user_registration_path, class: "inline-flex items-center justify-center px-6 py-3 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-indigo-600 hover:bg-indigo-700 transition duration-150 ease-in-out transform hover:-translate-y-1 hover:scale-105" %>
        <%= link_to "Log In", new_user_session_path, class: "mt-3 sm:mt-0 sm:ml-3 inline-flex items-center justify-center px-6 py-3 border border-transparent rounded-md shadow-sm text-base font-medium text-indigo-700 bg-indigo-100 hover:bg-indigo-200 transition duration-150 ease-in-out transform hover:-translate-y-1 hover:scale-105" %>
      </div>
    </div>
  </div>
  <% if user_signed_in? %>
    <div class="mt-8 flex justify-center">
      <%= link_to "Go to Dashboard", dashboard_path, class: "inline-flex items-center justify-center px-6 py-3 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-green-600 hover:bg-green-700 transition duration-150 ease-in-out transform hover:-translate-y-1 hover:scale-105" %>
    </div>
<% end %>
</div>